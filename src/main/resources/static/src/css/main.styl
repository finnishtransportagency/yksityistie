 /* Tooltip */
.tooltip > .tooltip-inner {
    background-color: #3598DB;
    color: #FFFFFF;
    border: 1px solid blue;
    max-width: 100%;
}

/* Tooltip on top */
.userconftooltip + .tooltip.top > .tooltip-arrow {
    border-top: 5px solid blue;
}

/* Tooltip on bottom */
.userconftooltip + .tooltip.bottom > .tooltip-arrow {
    border-bottom: 5px solid blue;
}

/* Tooltip on left */
.userconftooltip + .tooltip.left > .tooltip-arrow {
    border-left: 5px solid red;
}

/* Tooltip on right */
.userconftooltip + .tooltip.right > .tooltip-arrow {
    border-right: 5px solid black;
}

